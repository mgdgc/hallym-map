<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <FrameLayout
            android:id="@+id/layoutRowPlaceIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/layoutRowPlaceText"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imgRowPlace"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                app:tint="@color/white"
                tools:ignore="ContentDescription"
                tools:src="@drawable/baseline_search_24">

            </ImageView>

        </FrameLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:src="@drawable/baseline_chevron_right_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageView>

        <LinearLayout
            android:id="@+id/layoutRowPlaceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/layoutRowPlaceIcon"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/txtRowPlaceLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:alpha="0.36"
                android:lineSpacingExtra="0dp"
                android:padding="0dp"
                android:textSize="12sp"
                android:theme="@style/Theme.HallymMap.PrimaryTextView"
                tools:text="Title">

            </TextView>

            <TextView
                android:id="@+id/txtRowPlaceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:lineSpacingExtra="0dp"
                android:padding="0dp"
                android:textSize="16sp"
                android:theme="@style/Theme.HallymMap.PrimaryTextView"
                tools:text="Title">

            </TextView>

            <TextView
                android:id="@+id/txtRowPlaceDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:alpha="0.78"
                android:lineSpacingExtra="0dp"
                android:padding="0dp"
                android:textSize="12sp"
                android:theme="@style/Theme.HallymMap.PrimaryTextView"
                tools:text="Title">

            </TextView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>