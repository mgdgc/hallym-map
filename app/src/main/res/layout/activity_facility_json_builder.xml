<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".developer.FacilityJsonBuilderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="?android:attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editFacilityId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:hint="Id"
                android:nextFocusDown="@id/editFacilityFloor"
                tools:ignore="HardcodedText">

            </EditText>

            <EditText
                android:id="@+id/editFacilityFloor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="Floor"
                android:nextFocusDown="@id/spinnerFacilityCategory"
                tools:ignore="HardcodedText"
                android:layout_weight="1">

            </EditText>

            <Spinner
                android:id="@+id/spinnerFacilityCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nextFocusDown="@id/editFacilityName"
                android:layout_weight="1">

            </Spinner>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <EditText
                android:id="@+id/editFacilityName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:nextFocusDown="@id/editFacilityKr"
                android:hint="(Name)"
                tools:ignore="HardcodedText"
                android:layout_weight="1">

            </EditText>

            <EditText
                android:id="@+id/editFacilityKr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:nextFocusDown="@id/editFacilityEn"
                android:hint="(Kr)"
                tools:ignore="HardcodedText"
                android:layout_weight="1">

            </EditText>

            <EditText
                android:id="@+id/editFacilityEn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="(En)"
                tools:ignore="HardcodedText"
                android:layout_weight="1">

            </EditText>

        </LinearLayout>

        <EditText
            android:id="@+id/editFacilityTag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="(Tags)"
            tools:ignore="HardcodedText">

        </EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/buttonFacilityGenerate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:text="Generate"
                tools:ignore="HardcodedText">

            </Button>

            <Button
                android:id="@+id/buttonFacilitySave"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:text="Save"
                tools:ignore="HardcodedText">

            </Button>

            <Button
                android:id="@+id/buttonFacilityPlace"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:text="Place"
                tools:ignore="HardcodedText">

            </Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/buttonFacilityAdd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:text="Add to arr"
                tools:ignore="HardcodedText">

            </Button>

            <Button
                android:id="@+id/buttonFacilityShow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:text="Show arr"
                tools:ignore="HardcodedText">

            </Button>

        </LinearLayout>

        <TextView
            android:id="@+id/txtFacility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:text="Object Info"
            android:textIsSelectable="true"
            tools:ignore="HardcodedText">

        </TextView>

    </LinearLayout>

</ScrollView>