<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HallymMap" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_500</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowTranslucentStatus">true</item>
<!--        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>-->
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.HallymMap.Toolbar" parent="Theme.HallymMap">
        <!--  Toolbar color  -->
        <item name="android:background">@color/cardview_light_background</item>
    </style>

    <style name="Theme.HallymMap.Divider" parent="Theme.HallymMap">
        <!--  Divider color  -->
        <item name="android:background">@color/gray_300</item>
    </style>

    <!--  Widgets  -->
    <style name="Theme.HallymMap.PrimaryTextView" parent="Theme.HallymMap">
        <item name="android:textColor">@color/black</item>
        <item name="android:alpha">0.8</item>
    </style>
    <style name="Theme.HallymMap.ImageButton" parent="Theme.HallymMap">
        <item name="android:background">@drawable/background_image_button_light</item>
    </style>

    <!--  RecyclerView Rows  -->
    <style name="Theme.HallymMap.ViewGroup" parent="Theme.HallymMap">
        <item name="android:background">@color/bg_primary</item>
    </style>
</resources>